<div class="modal-header">
  <a class="modal-dismiss pull-right" href="javascript://" data-dismiss="modal">
    <i class="grcicon-x-grey"></i>
  </a>
  <h2>
    {{ modal_title }}
  </h2>
</div>
<div class="modal-body">
  <div class="row-fluid">
    <div class="span12 object_detail_column">
      {{#selected_object}}
        {{{ renderLive object_detail_view }}}
      {{/selected_object}}
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      {{#if selected_object}}
        <div class="option_column">
          {{{ renderLive option_column_view }}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
<div class="modal-footer">
  <div class="row-fluid">
    <div class="span6">
      &nbsp;
    </div>
    <div class="span6">
      <div class="confirm-buttons">
        <a class="btn btn-small btn-success preventdoubleclick" data-toggle="modal-submit" data-dismiss="modal" href="javascript://">
          {{renderDisable}}
          Save
        </a>
      </div>
    </div>
  </div>
</div>
