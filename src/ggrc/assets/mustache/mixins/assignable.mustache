{{#instance}}
  <ul class="label-list">
    {{#each instance.assignable}}
      <li>
        <label>
          <span class="person-label {{group}}"></span>
          {{group}}
        </label>
        <ul>
          {{#each group.people}}
            <li>
              <span class="file-controls">
                <a href="javascript://"><i class="fa fa-trash"></i></a>
                <a href="javascript://"><i class="fa fa-pencil-square-o"></i></a>
              </span>
              <a href="javascript://">{{name}}</a>
            </li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
{{/instance}}
