{{#instance}}
  <div class="row-fluid">
    <div class="span12">
      {{#using program=instance.program}}
        <a class="main-title {{instance.class.category}} oneline" href="{{#is_allowed 'view_object_page' 'Program' context=program.context}}{{viewLink}}{{else}}/dashboard#audit_widget/audit/{{id}}{{/is_allowed}}">
          {{instance.title}}
        </a>
      {{/using}}
    </div>
  </div>

  <div class="row-fluid">
    <div class="span9">
      <h6>Description</h6>
      <div class="rtf">
        {{{firstnonempty description '<span class="empty-message">None</span>'}}}
      </div>
    </div>
    <div class="span3">
      <h6>Status</h6>
      <p>
        {{status}}
      </p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <h6>Audit Lead</h6>
      <p class="oneline">
        <person empty-text="Not assigned" person-obj="instance.contact"></person>
      </p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <h6>Start date</h6>
      <p>
        {{#if instance.start_date}}
          {{localize_date instance.start_date}}
        {{else}}
          Not set
        {{/if}}
      </p>
    </div>
    <div class="span3">
      <h6>End date</h6>
      <p>
        {{#if instance.end_date}}
          {{localize_date instance.end_date}}
        {{else}}
          Not set
        {{/if}}
      </p>
    </div>
    <div class="span6">
      <h6>Report period</h6>
      <p>
        {{#if instance.report_start_date}}
          {{#if instance.report_end_date}}
            {{localize_date instance.report_start_date}}-{{localize_date instance.report_end_date}}
          {{else}}
            Starts {{localize_date instance.report_start_date}}
          {{/if}}
        {{else}}
          {{#if instance.report_end_date}}
            Ends {{localize_date instance.report_end_date}}
          {{else}}
            Not set
          {{/if}}
        {{/if}}
      </p>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6">
      <h6>Auditor</h6>
      <p class="oneline">
        {{#with_mapping 'authorizations' instance}}
          {{#with_auditors instance decoy=authorizations}}
            <ul class="inner-count-list">
              {{#each authorizations}}
                <li>
                  {{#using auditor=auditors.0.person}}
                    <person empty-text="Not assigned" person-obj="instance.person"></person>
                  {{/using}}
                </li>
              {{/each}}
            </ul>
          {{else}}
            <span class="empty-message">Not assigned</span>
          {{/with_auditors}}
        {{/with_mapping}}
      </p>
    </div>
    <div class="span6">
      <h6>Audit firm</h6>
      <p>
        {{#using firm=instance.audit_firm}}
          {{{firstnonempty firm.title 'None'}}}
        {{/using}}
      </p>
    </div>
  </div>

  <div class="links">
    <div class="row-fluid">
      <div class="span6">
        {{#using program=instance.program}}
          <a class="secondary oneline {{instance.class.category}}" href="{{#is_allowed 'view_object_page' 'Program' context=program.context}}{{program.viewLink}}{{else}}/dashboard{{/is_allowed}}#audit_widget/audit/{{id}}">
            View {{instance.title}}
          </a>
        {{/using}}
      </div>
      <div class="span6">
        <div class="oneline">
          {{#with_page_object_as 'page_instance'}}
            {{^if_equals instance page_instance}}
              {{#with_direct_mappings_as 'mappings' page_instance instance}}
                {{#if mappings.length}}
                  <span class="primary"
                        data-test-id="extended_info_object_already_mapped">
                    <i class="fa fa-check-square-o"></i>
                    Relevant to this {{#page_instance.class.title_singular}}
                      {{toLowerCase}}{{/page_instance.class.title_singular}}
                  </span>
                {{else}}
                  {{#is_allowed_to_map page_instance instance join=true}}
                  <a class="primary map-to-page-object"
                     href="javascript://"
                     data-follow="true"
                     data-test-id="extended_info_button_map"
                      {{#instance}}{{data 'instance'}}
                  {{/instance}}>
                    <i class="fa fa-random black"></i>
                    Map to this {{#page_instance.class.title_singular}}{{toLowerCase}}{{/page_instance.class.title_singular}}
                  </a>
                  {{/is_allowed_to_map}}
                {{/if}}
              {{/with_direct_mappings_as}}
            {{/if_equals}}
          {{/with_page_object_as}}
        </div>
      </div>
    </div>
  </div>
{{/instance}}
