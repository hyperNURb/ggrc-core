{{#if allow_creating}}
{{#if_can_create_response parent_instance}}
  {{#using audit=parent_instance.audit}}
  <a href="javascript://" class="section-create" rel="tooltip" data-placement="left" data-original-title="Create Response" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="{{parent_instance.response_model_class}}" data-object-plural="responses" data-object-params='{ "{{parent_instance.class.table_singular}}": {"id" : {{parent_instance.id}}, "type" : "{{parent_instance.class.model_singular}}" }, "context": { "id" : {{firstnonempty audit.context.id "null"}}, "href" : "{{audit.context.href}}", "type" : "{{audit.context.type}}" } }'>
    <i class="fa fa-plus-circle"></i>
  </a>
  {{/using}}
{{/if_can_create_response}}
{{/if}}
