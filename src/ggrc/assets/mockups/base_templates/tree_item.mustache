<div class="item-main" data-model="true">
    <div class="item-wrap">
        <div class="openclose">
            <span class="status-label status-{{state_color}}"></span>
            <i class="grcicon-arrow-right"></i>
        </div>
        <div class="select">
            <div class="item-data">
                <div class="row-fluid">
                <div class="
                {{#if_equals type "assessment"}}
                    span6
                {{else}}
                    span4
                {{/if_equals}}
                ">
                       <div class="title tree-title-area" rel="tooltip" data-placement="left" title="" data-original-title="{{title}}">
                        {{title}}
                    </div>
                </div>
                {{#if_equals type "assessment"}}
                    <div class="span2">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="owner tree-title-area">
                                    {{due_on}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{/if}}
                <div class="
                {{#if_equals type "assessment"}}
                    span2
                {{else}}
                    span4
                {{/if}}
                ">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="owner tree-title-area">
                                {{status}}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="
                {{#if_equals type "assessment"}}
                    span2
                {{else}}
                    span4
                {{/if}}
                ">
                        <div class="show-details">
                            <a href="/audits/3" target="_blank"><i class="grcicon-to-right"></i></a>
                        </div>
                    {{^if_equals type "assessment"}}
                        <ul class="tree-action-list">
                            <li>
                                <i class="grcicon-person-black" rel="tooltip" data-placement="left" data-original-title="Audit Lead, Request Assignee "></i>
                            </li>
                            <li>
                                <div class="counter">
                                    <i class="fa fa-list-alt"></i>
                                    3
                                </div>
                            </li>
                        </ul>
                    {{/if}}
                    </div>
                </div>
            </div><!-- item-data end -->
        </div><!-- select end -->
    </div><!-- item-wrap end -->
</div><!-- item-main end -->

{{#if children.length}}
<div class="tier-2-info item-content">
    <div class="tier-2-info-content">
        <div class="inner-tree">
            <ul class="tree-structure new-tree"></ul>
        </div>
    </div>
</div>
{{/if}}
