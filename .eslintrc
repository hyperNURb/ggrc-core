{
  "extends": "eslint-config-google",

  "env": {
    "browser": true,
    "jasmine": true,
    "jquery": true
  },

  "globals": {
    "_": false,
    "can": false,
    "CMS": false,
    "GGRC": false,
    "moment": false,
    "Mustache": false,
    "MutationObserver": false,
    "Permission": false,
    "resolve_computed": false,
    "RefreshQueue": false,
    "RefreshQueueManager": false,
    "ZeroClipboard": false,
  },

  "rules": {
    "require-jsdoc": 0,
    "space-before-function-paren": [
      2, {"anonymous": "always", "named": "never"}
    ],
    "max-len": [2, 80, 4, {
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "no-unused-vars": [2, {
      "args": "none",
      "vars": "all"
    }],
    // Each variable declaration must have its own var keyword
    "one-var": [2, "never"],
    "vars-on-top": 2
  }
}
